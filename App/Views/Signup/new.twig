{% extends "base.twig" %}

{% block title %}Sign up{% endblock %}

{% block body %}

    <h1>Sign up</h1>

    {% if user.errors is not empty %}
        <h4>Errors:</h4>
        <ul>
            {% for error in user.errors %}
                <li style="color: red; font-size: 0.9em">{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form method="post" action="/signup/create">

        <div>
            <label for="inputName">Name</label>
            <input type="text" id="inputName" name="name" placeholder="Name" autofocus value="{{ user.name }}"/>
        </div>
        <div>
            <label for="inputEmail">Email address</label>
            <input type="text" id="inputEmail" name="email" placeholder="email address" value="{{ user.email }}"/>
        </div>
        <div>
            <label for="inputPassword">Password</label>
            <input type="password" id="inputPassword" name="password" placeholder="Password"/>
        </div>
        <div>
            <label for="inputPasswordConfirmation">Repeat password</label>
            <input type="password" id="inputPasswordConfirmation" name="password_confirmation"
                   placeholder="Repeat password"/>
        </div>

        <button type="submit">Sign up</button>

    </form>

{% endblock %}
